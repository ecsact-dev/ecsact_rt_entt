local_path_override(
    module_name = "ecsact_rt_entt",
    path = "..",
)

register_toolchains("@ecsact_cli//:all")

llvm = use_extension("@toolchains_llvm//toolchain/extensions:llvm.bzl", "llvm", dev_dependency = True)
llvm.toolchain(llvm_version = "17.0.6")
