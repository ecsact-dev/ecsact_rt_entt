ecsact.toolchain(use_ecsact_cli = True)
use_repo(ecsact, "ecsact_toolchain")

register_toolchains(
    "@llvm_toolchain//:all",
    "@ecsact_toolchain//:all",
    dev_dependency = True,
)

local_path_override(
    module_name = "ecsact_runtime",
    path = "../../ecsact_runtime",
)

